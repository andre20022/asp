@model IEnumerable<tcmtechyte.Models.Usuario>

@{
    ViewBag.Title = "Painel";
}
@if (Session["funcionarios"] == null)
{
    <h2>@Html.ActionLink("Fazer login", "Login", "Home")</h2>

}
else
{
    <h1>Olá ,<b>@Session["funcionarios"]</b> bem vindo </h1>

    <p>@Html.ActionLink("Sair", "Logout", "Home")</p>

<h2>Funcionarios em Operação</h2>

<p>
    @Html.ActionLink("Adicionar novo Funcionario", "FuncionarioCadastro")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Exluir", "Excluir", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
}